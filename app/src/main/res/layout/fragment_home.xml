<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    >
    <include layout="@layout/title_layout"
        android:id="@+id/navigation_title"/>
    <RelativeLayout
        android:id="@+id/shop_title"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/main_blue"
        android:layout_below="@id/navigation_title">
        <com.example.coderlt.uibestpractice.View.DCircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:id="@+id/shop_iv"
            app:src="@drawable/shop_image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/shop_name"
            android:layout_toRightOf="@id/shop_iv"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:text="杭派"
            android:textColor="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shop_iv"
            android:layout_below="@id/shop_name"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/shop_manager"
            android:text="店长：方勤"
            android:textColor="@android:color/white"/>
        <com.example.coderlt.uibestpractice.View.MyImgButton
            android:id="@+id/switch_btn"
            android:layout_width="60dp"
            android:layout_height= "60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            app:src_unselected="@drawable/ic_switch"
            app:text="切换门店"
            app:text_unselected_color="@android:color/white"/>
        <com.example.coderlt.uibestpractice.View.MyImgButton
            android:id="@+id/new_shop_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_toLeftOf="@id/switch_btn"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            app:src_unselected="@drawable/ic_new_shop"
            app:text="创建门店"
            app:text_unselected_color="@android:color/white"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/business_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/shop_title"
        android:background="@android:color/white">
        <com.example.coderlt.uibestpractice.View.MyImgButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginLeft="12dp"
            android:layout_centerVertical="true"
            app:text="企业规章"
            app:text_unselected_color="@color/text_light_black"
            app:src_unselected="@drawable/ic_rule"/>
        <com.example.coderlt.uibestpractice.View.MyImgButton
            android:id="@+id/personal_bill"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            app:text="荣誉榜"
            app:text_unselected_color="@color/text_light_black"
            app:src_unselected="@drawable/ic_honour"/>
        <com.example.coderlt.uibestpractice.View.MyImgButton
            android:id="@+id/sales_img_btn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:layout_centerVertical="true"
            app:src_unselected="@drawable/ic_feedback"
            app:text="反馈建议"
            app:text_unselected_color="@color/text_light_black"/>
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/option_cycler"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/business_menu"
        android:layout_marginTop="10dp">
    </android.support.v7.widget.RecyclerView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/option_cycler"
        android:layout_marginTop="10dp"
        android:background="@android:color/white">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="福利社"/>
        <ImageView
            android:id="@+id/arrow_right_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/arrow_right_gray"/>
        <ImageView
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@id/arrow_right_iv"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/red_packet"/>
    </RelativeLayout>
</RelativeLayout>