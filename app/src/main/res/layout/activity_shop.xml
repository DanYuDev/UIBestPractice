<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.coderlt.uibestpractice.activity.ShopActivity">
    <!--必须设置 point_layout ，不然崩溃-->

    <com.kcode.autoscrollviewpager.view.AutoScrollViewPager
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/shop_banner"
            app:point_layout="right|center" />
    <include
        layout="@layout/title_layout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#88888888"/>
    <RelativeLayout
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/shop_banner"
        android:layout_marginTop="-50dp"
        android:layout_marginRight="12dp"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/company_logo_iv"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_default_avatar"
            android:scaleType="centerCrop"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/company_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:text="杭派健康管理有限公司"
        android:layout_below="@id/shop_banner"
        android:layout_margin="10dp"
        android:textColor="@color/colorPrimaryDark"/>

    <!--杭派公司的丁丁等级-->
    <RelativeLayout
        android:id="@+id/level_layout"
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_alignLeft="@+id/company_tv"
        android:layout_alignStart="@+id/company_tv"
        android:layout_below="@+id/company_tv"
        android:background="@android:color/holo_orange_light">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="钉钉等级：LV5"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:background="@android:color/holo_orange_light"
        android:layout_margin="10dp"
        android:layout_below="@id/level_layout">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="组织架构\n可以连接到不同的档案墙"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
</RelativeLayout>
