<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/title_layout"
        android:id="@+id/navigation_title" />
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/contacts_tab_layout"
        android:layout_below="@id/navigation_title"
        app:tabIndicatorColor="@color/main_blue"
        app:tabIndicatorHeight="1.5dp"
        app:tabSelectedTextColor="@color/main_blue"
        app:tabTextColor="@color/line_gray">
    </android.support.design.widget.TabLayout>
    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/contacts_tab_layout">
    </FrameLayout>
</RelativeLayout>