<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <include
        layout="@layout/title_layout_shadow"/>
    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/title_layout_shadow"
        android:background="#EEEEEE">
        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textColor="@color/main_blue"
            android:text="使用中的包间"/>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/status_tv"
            android:layout_margin="7dp"
            android:background="@color/line_gray"
            />
        <com.example.coderlt.uibestpractice.View.EditSpinnerText
            android:id="@+id/type_filter_spinnertv"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="类型"
            android:textSize="16sp"
            android:textColor="@color/main_blue"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:editable="false"
            android:background="@drawable/spinner_et_bg"
            android:drawableRight="@drawable/arrow_rotate_drawable"
            android:padding="5dp"/>
        <com.example.coderlt.uibestpractice.View.EditSpinnerText
            android:id="@+id/sort_filter_spinnertv"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="排序"
            android:textSize="16sp"
            android:textColor="@color/main_blue"
            android:layout_toLeftOf="@id/type_filter_spinnertv"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/arrow_rotate_drawable"
            android:editable="false"
            android:background="@drawable/spinner_et_bg"
            android:padding="5dp" />
    </RelativeLayout>
    <View
        android:id="@+id/seperator_view_1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"
        android:layout_below="@id/top_layout"/>
    <RelativeLayout
        android:id="@+id/room_on_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/seperator_view_1"
        android:layout_above="@id/bottom_menu">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/room_cycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null">
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true">
        <com.example.coderlt.uibestpractice.View.MyImgButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_light_gray"
            android:layout_margin="5dp"
            android:elevation="2dp"
            app:text="创建技师"
            app:text_unselected_color="@color/text_light_black"
            app:src_unselected="@drawable/ic_add_tech"/>
        <com.example.coderlt.uibestpractice.View.MyImgButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_light_gray"
            android:layout_margin="5dp"
            android:elevation="2dp"
            app:text="创建房间"
            app:text_unselected_color="@color/text_light_black"
            app:src_unselected="@drawable/ic_add_room"/>
        <com.example.coderlt.uibestpractice.View.MyImgButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_light_gray"
            android:layout_margin="5dp"
            android:elevation="2dp"
            app:text="排钟"
            app:text_unselected_color="@color/text_light_black"
            app:src_unselected="@drawable/ic_schedule"/>
        <com.example.coderlt.uibestpractice.View.MyImgButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:elevation="2dp"
            android:background="@drawable/btn_light_gray"
            app:text="政务监管"
            app:text_unselected_color="@color/text_light_black"
            app:src_unselected="@drawable/ic_gavo_platform"/>
    </LinearLayout>
</RelativeLayout>