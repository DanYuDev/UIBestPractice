<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.coderlt.uibestpractice.activity.EditBillActivity">
    <include layout="@layout/title_layout_shadow"/>
    <android.support.design.widget.TabLayout
        android:id="@+id/out_in_tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout_shadow"
        app:tabBackground="@color/tab_bg_gray"
        app:tabIndicatorColor="@color/main_blue"
        app:tabIndicatorHeight="2dp"
        app:tabSelectedTextColor="@android:color/white" />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/specific_cycler"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/out_in_tablayout"
        android:layout_above="@id/note_tv"/>
    <TextView
        android:id="@+id/note_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:textSize="14sp"
        android:text="添加备注信息"
        android:textColor="@color/lcim_common_gray"
        android:layout_above="@id/line_seperator"/>
    <View
        android:id="@+id/line_seperator"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"
        android:layout_above="@id/caculate_window"/>
    <RelativeLayout
        android:id="@+id/caculate_window"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_above="@id/numerical_keyboard"
        android:background="#F7F7F7">
        <ImageView
            android:id="@+id/camera_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@drawable/ic_camera_blue"/>
        <ImageView
            android:id="@+id/note_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/camera_iv"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/cancel_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@id/note_iv"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="-15dp"
            android:src = "@drawable/ic_cancel"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/delete_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_delete" />
        <TextView
            android:id="@+id/caculate_tv"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="0"
            android:textColor="@color/main_blue"
            android:textSize="26sp"
            android:gravity="center_vertical|right"
            android:layout_toLeftOf="@id/delete_iv"
            android:layout_toRightOf="@id/note_iv"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"/>
    </RelativeLayout>
    <com.example.coderlt.uibestpractice.View.NumericalKeyboard
        android:id="@+id/numerical_keyboard"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_alignParentBottom="true">
    </com.example.coderlt.uibestpractice.View.NumericalKeyboard>
</RelativeLayout>
